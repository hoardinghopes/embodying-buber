<!DOCTYPE html>
<!-- {{page.inputPath}} -->
<html lang="en" x-data="setUp" :data-theme="darkMode? 'dark':''">
  {% include "head.njk" %}

  <body class="{{title | slug}}">
    <div class="layout-wrapper"{% if banner %} style="background-image: url('{{ banner.src }}')"{% endif %}>

      <header class="header">
        <div class="header__content">
          <a href={{ "/" | url }} class="site-title">
            {{site.name}}
          </a>
          {% include "header-links.njk" -%}
        </div>
      </header>

      <main class="main">
        {% block content %}{% endblock content %}
      </main>

      {% if (site.footerLinks.length > 0) 
        or banner %}
        <footer class="footer">
          <div class="footer__content">
            {% if banner %}{{ banner.attribute | safe }}
            {% endif %}
            {% if site.footerLinks.length > 0 %}
              {% include "footer-links.njk" %}
            {% endif %}
          </div>
        </footer>
      {% endif %}
    </div>

    {% stats "umami" %}

    {% bundledjs "main.js" %}
  </body>
</html>